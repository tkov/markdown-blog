<body>
    <div class="ui container">
        <div class="ui header">Edit Article</div>
        <form class="ui form" action="/articles/<%= article.id %>?_method=PUT" method="POST">
            <%- include('_form_fields', { article: article }) %>
        </form>
    </div>
</body>
</html>